# LLM Evaluation Framework - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Required API Keys
# ==============================================================================

# OpenAI API Key (required for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Key (optional, for Claude models)  
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================================================
# Optional Integrations
# ==============================================================================

# Slack Integration (for alerts and notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_password_here

# GitHub Integration (for status checks)
GITHUB_TOKEN=ghp_your_github_token_here

# Datadog Integration (for metrics)
DATADOG_API_KEY=your_datadog_api_key_here

# ==============================================================================
# Database Configuration (optional)
# ==============================================================================

# SQLite Database Path (optional, defaults to in-memory)
DB_PATH=./data/evaluations.db

# ==============================================================================
# Dashboard Configuration (optional)
# ==============================================================================

# Dashboard Port (defaults to 3000)
DASHBOARD_PORT=3000

# Dashboard Authentication
DASHBOARD_API_KEY=your_dashboard_api_key_here

# ==============================================================================
# Cost Management (optional)
# ==============================================================================

# Monthly budget limits (USD)
BUDGET_SAFETY_EVALUATIONS=100.00
BUDGET_PERFORMANCE_TESTS=50.00
BUDGET_EXPERIMENTAL=25.00

# ==============================================================================
# Development Settings
# ==============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Default Model (optional)
DEFAULT_MODEL=gpt-3.5-turbo

# Default Registry Path (optional)
DEFAULT_REGISTRY=./registry

# ==============================================================================
# Notes:
# - Only OPENAI_API_KEY is required to get started
# - All other variables are optional and enable additional features
# - Never commit your actual .env file to version control
# - Restart the application after changing environment variables
# ==============================================================================
